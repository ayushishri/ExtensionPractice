{
  //required
  "manifest_version": 2,
  "name": "NewsEye",
  "version": "1.0",

  //recommended
  "description": "Watching the News with You!",
  "permissions": ["declarativeContent","storage", "activeTab"],

  "page_action": {
  "default_popup": "popup.html"
  },

  "content_scripts": [
   {
     "matches": ["http://*.nytimes.com/*", "http://*.cnn.com/*", "http://*.foxnews.com/*", "http://*abcnews.go.com/*", "http://*.usatoday.com/*"],
     //"css": ["myStyles.css"],
     "js": ["contentScript.js"]
   }
 ]
}
